<div class="text-center asset-area">
  <div class="digital-assets-image">
    <%= image_tag(digital_asset.attachment.url(:small), class: 'img-thumbnail attachment digital_asset_attachment' ,
                  data: asset_details(digital_asset), onerror: "$assetDetails.showFileGlyphicon(this)") %>
    <span class="hidden"><i class="fa fa-file file-icon"></i></span>
  </div>
  <p>
    <%= digital_asset.name.truncate(30) %>
  </p>


  <ul class="dropdown-menu">
    <% if can? :manage, digital_asset %>
      <li>
        <%= link_to '<i class="fa fa-trash"></i>'.html_safe(), spree.admin_digital_asset_path(digital_asset), method: :delete, class: 'delete_digital_asset_button with-tip', data: { original_title: 'Delete' } %>
      </li>
      <li role="separator" class="divider"></li>
      <li>
        <%= link_to '<i class="fa fa-pencil"></i>'.html_safe(), spree.edit_admin_digital_asset_path(digital_asset), class: 'with-tip', data: { original_title: 'Edit' } %>
      </li>
    <% end %>
    <li role="separator" class="divider"></li>
    <li><%= link_to '<i class="fa fa-download"></i>'.html_safe(), digital_asset.attachment.url(:original, false), target: '_blank', class: 'with-tip', data: { original_title: 'Download' } %></li>
  </ul>
</div>
